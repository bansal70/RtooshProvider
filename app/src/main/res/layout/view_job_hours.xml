<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_stroke_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvDays"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/days"
        android:layout_toLeftOf="@+id/layoutDay"
        android:layout_toStartOf="@+id/layoutDay"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:textAppearance="@style/TextAppearance.FontMedium"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_centerVertical="true"/>

    <LinearLayout
        android:id="@+id/layoutDay"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_edit_text_bg"
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:paddingTop="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:orientation="horizontal"
        android:gravity="center"
        android:foreground="?selectableItemBackground"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/tvOpen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textSize="@dimen/_12sdp"
            android:textAppearance="@style/TextAppearance.FontMedium" />

        <View
            android:layout_width="@dimen/_5sdp"
            android:layout_height="@dimen/_1sdp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.FontMedium"
            android:text="-" />

        <View
            android:layout_width="@dimen/_5sdp"
            android:layout_height="@dimen/_1sdp"/>

        <TextView
            android:id="@+id/tvClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textSize="@dimen/_12sdp"
            android:textAppearance="@style/TextAppearance.FontMedium" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imgClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/_7sdp"
        android:visibility="gone"
        android:foreground="?selectableItemBackground"
        android:contentDescription="@string/remove"
        android:src="@drawable/ic_delete_service"/>

</RelativeLayout>