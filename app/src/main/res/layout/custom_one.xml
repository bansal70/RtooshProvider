<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/custom_basic_gradient"
    android:gravity="center"
    android:padding="@dimen/_10sdp"
    android:orientation="horizontal" >

    <com.rtoosh.provider.model.custom.EqualWidthHeightTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/one"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/_15sdp"
        android:gravity="center"
        android:inputType="number"
        android:textAppearance="@style/TextAppearance.FontMedium"
        android:background="@drawable/custom_circular_white"/>

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/_1sdp"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:background="@color/colorWhite"/>

    <com.rtoosh.provider.model.custom.EqualWidthHeightTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/two"
        android:textColor="@color/white"
        android:textSize="@dimen/_15sdp"
        android:inputType="number"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.FontMedium"
        android:background="@drawable/custom_circular_transparent"/>

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/_1sdp"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:background="@color/colorWhite"/>

    <com.rtoosh.provider.model.custom.EqualWidthHeightTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/three"
        android:textColor="@color/white"
        android:textSize="@dimen/_15sdp"
        android:gravity="center"
        android:inputType="number"
        android:textAppearance="@style/TextAppearance.FontMedium"
        android:background="@drawable/custom_circular_transparent"/>

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/_1sdp"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:background="@color/colorWhite"/>

    <com.rtoosh.provider.model.custom.EqualWidthHeightTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/four"
        android:textColor="@color/white"
        android:textSize="@dimen/_15sdp"
        android:inputType="number"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.FontMedium"
        android:background="@drawable/custom_circular_transparent"/>

</LinearLayout>