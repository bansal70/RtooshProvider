<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/cardServices"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/_5sdp"
    app:cardUseCompatPadding="true"
    android:visibility="gone"
    tools:showIn="@layout/activity_register_service">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvServiceName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hair_cut"
                android:textSize="@dimen/_15sdp"
                android:layout_toLeftOf="@+id/tvServicePrice"
                android:layout_toStartOf="@+id/tvServicePrice"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:textAppearance="@style/TextAppearance.FontBold"/>

            <TextView
                android:id="@+id/tvServicePrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$70"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_15sdp"
                android:textAppearance="@style/TextAppearance.FontBold"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/tvServiceContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Provide you the best service"
            android:textColor="@color/colorGrayDark"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/duration"
                android:layout_gravity="center"
                android:textAppearance="@style/TextAppearance.FontRegular"
                android:textColor="@color/colorGrayDark"/>

            <TextView
                android:id="@+id/tvServiceDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.FontRegular"
                android:text="30 min"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>