<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/customer_info"
        android:textAppearance="@style/TextAppearance.FontBold"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/_12sdp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp">

        <TextView
            android:id="@+id/tvCustomerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/llInfo"
            android:layout_toStartOf="@+id/llInfo"
            android:drawableLeft="@drawable/ic_order_details_name"
            android:drawablePadding="@dimen/_10sdp"
            android:drawableStart="@drawable/ic_order_details_name"
            android:gravity="center|start"
            android:text=""
            android:textAppearance="@style/TextAppearance.FontBold"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_12sdp" />

        <LinearLayout
            android:id="@+id/llInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_3sdp"
                app:cardUseCompatPadding="true">

                <TextView
                    android:id="@+id/tvCall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/ic_call"
                    android:drawableStart="@mipmap/ic_call"
                    android:gravity="center"
                    android:paddingBottom="@dimen/_2sdp"
                    android:paddingLeft="@dimen/_12sdp"
                    android:paddingRight="@dimen/_12sdp"
                    android:paddingStart="@dimen/_12sdp"
                    android:paddingEnd="@dimen/_12sdp"
                    android:paddingTop="@dimen/_2sdp"
                    android:text="@string/call"
                    android:textAllCaps="false"
                    android:textColor="@color/colorAccent"
                    android:textAppearance="@style/TextAppearance.FontBold"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_3sdp"
                app:cardUseCompatPadding="true">

                <TextView
                    android:id="@+id/tvSms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/ic_sms"
                    android:drawablePadding="@dimen/_2sdp"
                    android:drawableStart="@mipmap/ic_sms"
                    android:gravity="center"
                    android:paddingBottom="@dimen/_2sdp"
                    android:paddingLeft="@dimen/_12sdp"
                    android:paddingRight="@dimen/_12sdp"
                    android:paddingStart="@dimen/_12sdp"
                    android:paddingEnd="@dimen/_12sdp"
                    android:paddingTop="@dimen/_2sdp"
                    android:text="@string/sms"
                    android:textColor="@color/colorAccent"
                    android:textAppearance="@style/TextAppearance.FontBold"
                    android:textSize="@dimen/_10sdp" />

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/tvTotalPersons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_order_persons"
        android:drawablePadding="@dimen/_10sdp"
        android:drawableStart="@drawable/ic_order_persons"
        android:gravity="center"
        android:text=""
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:textAppearance="@style/TextAppearance.FontMedium"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/_12sdp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/llTime"
            android:layout_toStartOf="@id/llTime"
            android:drawableLeft="@drawable/ic_order_details_time_black"
            android:drawablePadding="@dimen/_10sdp"
            android:drawableStart="@drawable/ic_order_details_time_black"
            android:gravity="center|start"
            android:text="@string/order_total_time"
            android:textAppearance="@style/TextAppearance.FontMedium"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_12sdp" />

        <LinearLayout
            android:id="@+id/llTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvHour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_2sdp"
                android:textAppearance="@style/TextAppearance.FontBold"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hrs"
                android:textAppearance="@style/TextAppearance.FontMedium"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/tvMinutes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_2sdp"
                android:textAppearance="@style/TextAppearance.FontBold"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/min"
                android:textAppearance="@style/TextAppearance.FontMedium"
                android:textSize="@dimen/_10sdp" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>