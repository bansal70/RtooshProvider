<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_20sdp"
    app:cardCornerRadius="@dimen/_3sdp"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hair_selection_new_services"
                android:textColor="@color/colorAccent"
                android:layout_marginTop="@dimen/_10sdp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textAppearance="@style/TextAppearance.FontBold"/>

            <EditText
                android:id="@+id/editServiceName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:padding="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:hint="@string/service_name"
                android:textColor="@color/colorBlack"
                android:textAppearance="@style/TextAppearance.FontMedium"
                android:background="@drawable/custom_edit_text_bg"
                android:inputType="text"/>

            <EditText
                android:id="@+id/editServiceContent"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:padding="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:hint="@string/description"
                android:textColor="@color/colorBlack"
                android:textAppearance="@style/TextAppearance.FontMedium"
                android:background="@drawable/custom_edit_text_bg"
                android:inputType="text"/>

            <EditText
                android:id="@+id/editServicePrice"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:padding="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:hint="@string/price"
                android:textColor="@color/colorBlack"
                android:textAppearance="@style/TextAppearance.FontMedium"
                android:background="@drawable/custom_edit_text_bg"
                android:inputType="number"/>

            <EditText
                android:id="@+id/editServiceDuration"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:padding="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:hint="@string/service_duration"
                android:textColor="@color/colorBlack"
                android:inputType="number"
                android:digits="0123456789:"
                android:maxLength="5"
                android:textAppearance="@style/TextAppearance.FontMedium"
                android:background="@drawable/custom_edit_text_bg" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvDoneSelection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/done"
            android:textAllCaps="true"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="@dimen/_10sdp"
            android:foreground="@drawable/ripple"
            style="?borderlessButtonStyle"
            android:onClick="nextService"
            android:paddingRight="@dimen/_20sdp"
            android:paddingLeft="@dimen/_20sdp"
            android:paddingStart="@dimen/_20sdp"
            android:paddingEnd="@dimen/_20sdp"
            android:textAppearance="@style/TextAppearance.FontMedium"
            android:background="@drawable/custom_basic_gradient"/>

    </LinearLayout>

</android.support.v7.widget.CardView>