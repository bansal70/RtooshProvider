<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorLightGray"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp"
    tools:showIn="@layout/activity_profile"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/_15sdp"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@drawable/ic_settings_name" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name"
                android:textSize="@dimen/_12sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:text="Nadia Salil"
                android:textAppearance="@style/TextAppearance.FontMedium" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/_15sdp"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@drawable/ic_settings_phone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/phone_number"
                android:textSize="@dimen/_12sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:text="+966505505050"
                android:textAppearance="@style/TextAppearance.FontMedium" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/_15sdp"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@drawable/ic_settings_email" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/email"
                android:textSize="@dimen/_12sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:text="nadia.salil@gmail.com"
                android:textAppearance="@style/TextAppearance.FontMedium" />

        </LinearLayout>

    </LinearLayout>

    <com.rtoosh.provider.model.custom.TextViewDrawableSize
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:drawableLeft="@drawable/ic_settings_change_password"
        android:drawablePadding="@dimen/_10sdp"
        android:drawableStart="@drawable/ic_settings_change_password"
        android:text="@string/change_password"
        android:textAllCaps="true"
        android:foreground="?selectableItemBackground"
        android:textAppearance="@style/TextAppearance.FontMedium"
        android:textColor="@color/colorAccent"
        app:compoundDrawableWidth="@dimen/_15sdp" />

    <com.rtoosh.provider.model.custom.TextViewDrawableSize
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:drawableLeft="@drawable/ic_settings_document"
        android:drawablePadding="@dimen/_10sdp"
        android:drawableStart="@drawable/ic_settings_document"
        android:text="@string/documents"
        android:foreground="?selectableItemBackground"
        android:textAppearance="@style/TextAppearance.FontMedium"
        android:textColor="@color/colorAccent"
        app:compoundDrawableWidth="@dimen/_15sdp" />

</LinearLayout>