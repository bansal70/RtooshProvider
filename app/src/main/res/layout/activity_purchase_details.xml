<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.rtoosh.provider.views.activities.PurchaseDetailsActivity">

    <include layout="@layout/toolbar_purchase"
        android:id="@+id/toolbar"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvDone"
        android:layout_below="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/custom_basic_gradient"
                android:padding="@dimen/_10sdp">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="@dimen/_4sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/total_amount"
                            android:layout_gravity="center"
                            android:textColor="@color/colorBlack"
                            android:textAppearance="@style/TextAppearance.FontMedium"
                            android:textSize="@dimen/_15sdp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$305"
                            android:textSize="@dimen/_20sdp"
                            android:textColor="@color/colorAccent"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:textAppearance="@style/TextAppearance.FontBold"
                            android:layout_gravity="center"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:background="@color/colorGray"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/_5sdp"
                            android:paddingRight="@dimen/_5sdp"
                            android:textColor="@color/colorBlack"
                            android:textAppearance="@style/TextAppearance.FontBold"
                            android:text="@string/invoice_breakdown"/>

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recyclerOrders"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/_5sdp"
                            android:paddingRight="@dimen/_5sdp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_5sdp">

                            <TextView
                                android:id="@+id/tvService"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/service_commission"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/_12sdp"
                                android:layout_toLeftOf="@+id/llPrice"
                                android:layout_toStartOf="@+id/llPrice"
                                android:drawableLeft="@mipmap/ic_ticket_grey"
                                android:drawableStart="@mipmap/ic_ticket_grey"
                                android:drawablePadding="@dimen/_5sdp"
                                android:textAppearance="@style/TextAppearance.FontMedium"
                                android:gravity="center|start"/>

                            <LinearLayout
                                android:id="@+id/llPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_centerVertical="true"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentEnd="true">

                                <TextView
                                    android:id="@+id/tvQuantity"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="@style/TextAppearance.FontMedium"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/_12sdp"
                                    android:text="20% ="/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/_$"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_12sdp"
                                    android:textAppearance="@style/TextAppearance.FontMedium"/>

                                <TextView
                                    android:id="@+id/tvPrice"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="61"
                                    android:textSize="@dimen/_12sdp"
                                    android:textColor="@color/black"
                                    android:textAppearance="@style/TextAppearance.FontMedium"/>
                            </LinearLayout>

                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_margin="@dimen/_5sdp"
                            android:background="@color/colorGray"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_5sdp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/total"
                                android:textSize="@dimen/_15sdp"
                                android:textAppearance="@style/TextAppearance.FontBold"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$244"
                                android:textColor="@color/colorAccent"
                                android:textSize="@dimen/_15sdp"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:textAppearance="@style/TextAppearance.FontBold"/>

                        </LinearLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/colorWhite"
                android:paddingTop="@dimen/_5sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/thank_you"
                    android:textSize="@dimen/_18sdp"
                    android:textColor="@color/colorBlack"
                    android:layout_gravity="center"
                    android:textAppearance="@style/TextAppearance.FontBold"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/colorGray"
                    android:layout_marginTop="@dimen/_5sdp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/additional_services"
                    android:textColor="@color/colorBlack"
                    android:textAppearance="@style/TextAppearance.FontBold"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <android.support.v7.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="@dimen/_3sdp"
                        app:cardUseCompatPadding="true"
                        app:cardElevation="@dimen/_4sdp">

                        <TextView
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="wrap_content"
                            android:text="@string/yes"
                            android:textColor="@color/colorWhite"
                            android:drawableRight="@mipmap/ic_check_white"
                            android:drawableEnd="@mipmap/ic_check_white"
                            android:paddingRight="@dimen/_10sdp"
                            android:paddingLeft="@dimen/_10sdp"
                            android:gravity="center"
                            android:textAppearance="@style/TextAppearance.FontBold"
                            android:paddingTop="@dimen/_7sdp"
                            android:paddingBottom="@dimen/_7sdp"
                            android:background="@drawable/custom_basic_gradient"/>

                    </android.support.v7.widget.CardView>

                    <View
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="wrap_content"/>

                    <android.support.v7.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="@dimen/_3sdp"
                        app:cardUseCompatPadding="true"
                        app:cardElevation="@dimen/_4sdp">

                        <TextView
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="wrap_content"
                            android:text="@string/no"
                            android:textColor="@color/colorAccent"
                            android:drawableRight="@mipmap/ic_check_pink"
                            android:drawableEnd="@mipmap/ic_check_pink"
                            android:paddingRight="@dimen/_10sdp"
                            android:paddingLeft="@dimen/_10sdp"
                            android:gravity="center"
                            android:textAppearance="@style/TextAppearance.FontBold"
                            android:paddingTop="@dimen/_7sdp"
                            android:paddingBottom="@dimen/_7sdp"
                            android:background="@color/white"/>

                    </android.support.v7.widget.CardView>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/your_customer_was"
                    android:padding="@dimen/_10sdp"
                    android:textColor="@color/colorBlack"
                    android:textAppearance="@style/TextAppearance.FontBold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sara Karmen"
                    android:textSize="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:drawableLeft="@mipmap/ic_order_details_name"
                    android:drawableStart="@mipmap/ic_order_details_name"
                    android:drawablePadding="@dimen/_5sdp"
                    android:textColor="@color/colorAccent"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:textAppearance="@style/TextAppearance.FontBold"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <TextView
        android:id="@+id/tvDone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/done"
        android:padding="@dimen/_5sdp"
        android:gravity="center"
        android:textSize="@dimen/_15sdp"
        android:textColor="@color/white"
        android:background="@drawable/custom_basic_gradient"
        android:foreground="?selectableItemBackground"
        android:textAppearance="@style/TextAppearance.FontBold"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
