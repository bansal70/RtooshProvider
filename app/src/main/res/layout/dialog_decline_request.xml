<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/_30sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/decline_a_request"
                android:textSize="@dimen/_15sdp"
                android:textAppearance="@style/TextAppearance.FontBold"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:textAppearance="@style/TextAppearance.FontMedium"
                android:textColor="@color/black"
                android:text="@string/decline_warning"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/decline_reason"
                android:textSize="@dimen/_15sdp"
                android:textAppearance="@style/TextAppearance.FontBold"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_10sdp"/>

            <EditText
                android:id="@+id/editReason"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp"
                android:padding="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="top"
                android:textAppearance="@style/TextAppearance.FontMedium"
                android:background="@drawable/custom_edit_text_bg"
                android:inputType="text"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/colorGray"
            android:layout_marginTop="@dimen/_20sdp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="end">

            <TextView
                android:id="@+id/tvDeclineCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:layout_gravity="end"
                android:textAllCaps="true"
                android:foreground="?selectableItemBackground"
                android:textAppearance="@style/TextAppearance.FontMedium"
                android:textColor="@color/colorAccent"
                android:padding="@dimen/_15sdp"/>

            <TextView
                android:id="@+id/tvDeclineRequest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sure_decline"
                android:layout_gravity="end"
                android:textAllCaps="false"
                android:foreground="?selectableItemBackground"
                android:textAppearance="@style/TextAppearance.FontMedium"
                android:textColor="@color/colorAccent"
                android:padding="@dimen/_15sdp"/>

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>