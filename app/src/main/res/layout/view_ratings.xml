<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_5sdp"
    app:cardUseCompatPadding="true"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginRight="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_5sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/level_of_cleanliness"
                android:layout_toLeftOf="@+id/rbCleanliness"
                android:layout_toStartOf="@+id/rbCleanliness"
                android:textSize="@dimen/_12sdp"
                android:textAppearance="@style/TextAppearance.FontMedium"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"/>

            <RatingBar
                android:id="@+id/rbCleanliness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                style="?android:ratingBarStyleIndicator"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:isIndicator="true"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/quality_of_service"
                android:layout_toLeftOf="@+id/rbQuality"
                android:layout_toStartOf="@+id/rbQuality"
                android:textSize="@dimen/_12sdp"
                android:textAppearance="@style/TextAppearance.FontMedium"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"/>

            <RatingBar
                android:id="@+id/rbQuality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                style="?android:ratingBarStyleIndicator"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:isIndicator="true"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/arrival_time"
                android:layout_toLeftOf="@+id/rbArrival"
                android:layout_toStartOf="@+id/rbArrival"
                android:textSize="@dimen/_12sdp"
                android:textAppearance="@style/TextAppearance.FontMedium"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"/>

            <RatingBar
                android:id="@+id/rbArrival"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                style="?android:ratingBarStyleIndicator"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:isIndicator="true"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/customer_feedback"
            android:textSize="@dimen/_12sdp"
            android:textAppearance="@style/TextAppearance.FontMedium"
            android:layout_marginTop="@dimen/_5sdp"/>

        <TextView
            android:id="@+id/tvFeedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/colorBlack"
            android:textAppearance="@style/TextAppearance.FontRegular"
            android:layout_marginTop="@dimen/_10sdp"/>

    </LinearLayout>

</android.support.v7.widget.CardView>