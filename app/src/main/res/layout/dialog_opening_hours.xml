<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_5sdp"
    app:cardUseCompatPadding="true"
    android:layout_gravity="center"
    android:layout_margin="@dimen/_30sdp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:paddingTop="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/_15sdp"
            android:paddingRight="@dimen/_15sdp"
            android:paddingStart="@dimen/_15sdp"
            android:paddingEnd="@dimen/_15sdp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/opening_hours"
                android:textSize="@dimen/_18sdp"
                android:gravity="center"
                android:textColor="@color/colorRed"
                android:textAppearance="@style/TextAppearance.FontMedium"/>

            <TextView
                android:id="@+id/tvOpenTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:hint="@string/opening_time"
                android:textAppearance="@style/TextAppearance.FontMedium"
                android:drawableEnd="@mipmap/ic_order_clock"
                android:drawableRight="@mipmap/ic_order_clock"
                android:padding="@dimen/_10sdp"
                android:foreground="?selectableItemBackground"
                android:background="@drawable/custom_edit_text_bg"/>

            <TextView
                android:id="@+id/tvCloseTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:hint="@string/closing_time"
                android:textAppearance="@style/TextAppearance.FontMedium"
                android:padding="@dimen/_10sdp"
                android:drawableEnd="@mipmap/ic_order_clock"
                android:drawableRight="@mipmap/ic_order_clock"
                android:foreground="?selectableItemBackground"
                android:background="@drawable/custom_edit_text_bg"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@color/colorGray"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="end">

            <TextView
                android:id="@+id/tvCancelTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:layout_gravity="end"
                android:textAllCaps="true"
                android:foreground="?selectableItemBackground"
                android:textAppearance="@style/TextAppearance.FontMedium"
                android:textColor="@color/colorAccent"
                android:padding="@dimen/_15sdp"/>

            <TextView
                android:id="@+id/tvAddTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add"
                android:layout_gravity="end"
                android:textAllCaps="true"
                android:foreground="?selectableItemBackground"
                android:textAppearance="@style/TextAppearance.FontMedium"
                android:textColor="@color/colorAccent"
                android:padding="@dimen/_15sdp"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>