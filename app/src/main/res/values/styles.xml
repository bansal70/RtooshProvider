<resources  xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextAppearance.FontMedium" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">fonts/AvenirLTStd-Medium.ttf</item>
    </style>

    <style name="TextAppearance.FontRegular" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">fonts/AvenirLTStd-Book.otf</item>
    </style>

    <style name="TextAppearance.FontBold" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">fonts/Bold.otf</item>
    </style>

    <style name="SCBSwitch">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/colorGreen</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/white</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/colorGrayDark</item>
    </style>

    <style name="SwitchAppearance">
        <item name="colorControlActivated">@color/colorGreen</item>
        <item name="colorSwitchThumbNormal">@color/white</item>
        <item name="android:colorForeground">@color/red_A700</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/colorGrayDark</item>
        <item name="colorControlActivated">@color/colorYellow</item>
    </style>

    <style name="CustomRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_rating_bar_reviews</item>
        <item name="android:minHeight">@dimen/_20sdp</item>
        <item name="android:maxHeight">@dimen/_20sdp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="NumberPickerStyle">
        <item name="android:textSize">22sp</item>
        <item name="android:textColorPrimary">@color/colorAccent</item>
       <!-- <item name="android:colorControlNormal" tools:targetApi="lollipop">@color/colorAccent</item>-->
    </style>

</resources>
