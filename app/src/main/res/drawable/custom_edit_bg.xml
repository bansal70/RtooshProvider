<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--background to compensate the transparency under shadow and glow (for bigger depth values)-->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_10sdp" />
            <solid android:color="@color/colorGray" />
        </shape>
    </item>

    <!--top, dark, inner shadow-->
    <item
        android:top="@dimen/_1sdp">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_10sdp" />
            <solid android:color="@color/colorGrayLight" />
        </shape>
    </item>

    <!--bottom, light, outer glow-->
    <!--   <item
           android:bottom="@dimen/depth">
           <shape android:shape="rectangle">
               <corners android:radius="@dimen/_5sdp" />
               <solid android:color="@color/colorGrayLight" />
           </shape>
       </item>
   -->

    <!--your color-->
    <item
        android:top="@dimen/_1sdp">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_10sdp" />
            <stroke android:width="@dimen/_1sdp"
                android:color="@color/colorGrayLight"/>
            <solid android:color="#f3ecee" />
        </shape>
    </item>
</layer-list>