<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--background to compensate the transparency under shadow and glow (for bigger depth values)-->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_4sdp" />
            <solid android:color="@color/colorGray" />
        </shape>
    </item>

    <!--top, dark, inner shadow-->
    <item
        android:top="0.3dp">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_4sdp" />
            <solid android:color="@color/colorGrayLight" />
        </shape>
    </item>

    <!--bottom, light, outer glow-->
 <!--   <item
        android:bottom="@dimen/depth">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_5sdp" />
            <solid android:color="@color/colorGrayLight" />
        </shape>
    </item>
-->

    <!--your color-->
    <item
        android:top="0.3dp">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_4sdp" />
            <stroke android:width="0.5dp"
                android:color="@color/colorGray"/>
            <solid android:color="@color/colorLightPink" />
        </shape>
    </item>
</layer-list>